{
  "manifest_version": 2,
  "name": "Hacker News for Chrome",
  "version": "1",
  "description": "Lists 30 most current stories trending on Hacker News",
  "icons": { "48": "icon48.png",
	         "128": "icon128.png" },
  "browser_action": {
    "default_title": "Hacker News for Chrome",
    "default_icon": "icon18.png",
    "default_popup": "popup.html"
  },
	"background": {
    "page": "background.html"
  },
	"options_page":"options.html",
  "permissions": [
    "tabs",
    "https://news.ycombinator.com/",
    "http://news.ycombinator.com/",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://news.ycombinator.com; object-src 'self' 'unsafe-eval' https://news.ycombinator.com"
}
